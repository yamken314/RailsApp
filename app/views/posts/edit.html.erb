<div class="main posts-new">
  <div class="container">
    <h1 class="form-heading">編集する</h1>
    <%= form_tag("/posts/#{@post.id}/update") do %>
    <div class="form">
      <div class="form-body">
      <!-- @postのエラーが表示されるよう、「〇〇」の部分を書き換えてください -->
          <% @post.errors.full_messages.each do |message| %>
            <div class="form-error">
              <%= message %>
            </div>
          <% end %>
        <textarea name = "content"><%=@post.content%></textarea><!--@post.contentは初期値-->
        <input type="submit" value="保存">
        <% end %>
      </div>
    </div>
  </div>
</div>